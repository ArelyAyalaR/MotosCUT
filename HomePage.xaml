<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMotos.HomePage"
             Title="Página de Inicio">
	<StackLayout Padding="30" VerticalOptions="Center" HorizontalOptions="Center">
		<Label Text="Bienvenido a Proyecto Motos" FontSize="24" HorizontalOptions="Center" TextColor="#333" />
		<Label x:Name="welcomeLabel" FontSize="18" HorizontalOptions="Center" TextColor="#333" Margin="0,20,0,0" />
		<Button Text="Cerrar Sesión" BackgroundColor="#FF3B30" TextColor="White" VerticalOptions="End" Clicked="OnLogoutClicked" />
	</StackLayout>
</ContentPage>
